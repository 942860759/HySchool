<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyschool.common.dao.GoodsMapper">
    <resultMap id="BaseResultMap" type="com.hyschool.common.bean.Goods">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="vip_id" jdbcType="INTEGER" property="vipId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="price" jdbcType="DOUBLE" property="price"/>
        <result column="stock" jdbcType="INTEGER" property="stock"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="transaction_address" jdbcType="VARCHAR" property="transactionAddress"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="online_time" jdbcType="TIMESTAMP" property="onlineTime"/>
        <result column="off_the_shelf_time" jdbcType="TIMESTAMP" property="offTheShelfTime"/>
    </resultMap>

    <select id="byCategoryId" resultMap="BaseResultMap">
        SELECT * FROM goods WHERE category_id=#{categoryId,jdbcType=INTEGER} limit #{start},#{pageSize}
    </select>

    <select id="countByCategoryId" resultType="INTEGER" parameterType="INTEGER">
        SELECT COUNT(*) FROM goods WHERE category_id=#{categoryId,jdbcType=INTEGER}
    </select>

</mapper>